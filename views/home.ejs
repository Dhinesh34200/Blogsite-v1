<%- include("partials/header"); -%>
<h1>Home</h1>
<p><%= homecontent %></p>
<ul>
    <% posts.forEach((post)=>{ %>
        <h1> <%= post.title %> </h1>
        <% if(post.post.length>100){ %>
            <!-- <p><%= post.post.substring(0,100)+ "..." %> <a href="/posts/<%=post.Title%>">Read more</a></p> -->
             <p><%= post.post.substring(0,100)+ "..." %><a href="/posts/<%=post._id%>">Read more</a></p> 
        <% } else{ %>
            <p><%= post.post %></p>
        <% } %>
                   
    <% }); %>
  
</ul>

<%- include("partials/footer"); -%>



